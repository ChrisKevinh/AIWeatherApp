<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 优化渐变背景 -->
    <gradient
        android:angle="135"
        android:startColor="#90007AFF"
        android:centerColor="#904A90E2"
        android:endColor="#907B68EE"
        android:type="linear" />
    
    <!-- 圆角 -->
    <corners android:radius="28dp" />
    
    <!-- 描边 -->
    <stroke
        android:width="1.5dp"
        android:color="#50FFFFFF" />
        
</shape> 